<%# app/views/messages/_ai_message.html.erb %>
<%# ローカル変数: message %>

<%= turbo_frame_tag dom_id(message) do %>
  <% if message.response.present? %>
    <div class="flex justify-start items-start gap-3 mb-6">
      <%= image_tag "ai_concierge_icon.png", class: "w-10 h-10 rounded-full object-cover flex-shrink-0 border border-purple-100 shadow-sm", alt: "AI Icon" %>
      
      <div class="max-w-[85%]">
        <% suggestion = parse_spot_suggestion(message.response) %>
        <% if suggestion %>
          <%# A. スポット提案 %>
          <div class="space-y-4">
            <div class="bg-white p-4 rounded-2xl rounded-tl-none border border-gray-100 text-sm md:text-base text-gray-800 shadow-sm">
              <%= suggestion['message'] %>
            </div>
            <% if suggestion['spots'].present? %>
              <% suggestion['spots'].each_with_index do |spot_data, i| %>
                <div class="bg-white p-4 rounded-xl border border-blue-100 shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                  <div class="flex justify-between items-start gap-2 mb-2">
                    <h3 class="font-bold text-gray-900 text-base"><%= spot_data['name'] %></h3>
                    <span class="bg-blue-100 text-blue-700 text-[10px] px-2 py-1 rounded-full font-bold whitespace-nowrap">おすすめ</span>
                  </div>
                  <p class="text-sm text-gray-600 mb-3 leading-relaxed"><%= spot_data['description'] %></p>
                  
                  <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-4 text-xs text-gray-500 font-medium">
                      <span class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm.75-13.25a.75.75 0 0 0-1.5 0v5c0 .414.336.75.75.75h4a.75.75 0 0 0 0-1.5h-3.25V4.75Z" clip-rule="evenodd" />
                        </svg>
                        <%= spot_data['duration'] %>分
                      </span>
                      <span class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM6.75 9.25a.75.75 0 0 0 0 1.5h4.59l-2.1 1.95a.75.75 0 0 0 1.02 1.1l3.5-3.25a.75.75 0 0 0 0-1.1l-3.5-3.25a.75.75 0 1 0-1.02 1.1l2.1 1.95H6.75Z" clip-rule="evenodd" />
                        </svg>
                        ¥<%= number_with_delimiter(spot_data['estimated_cost']) %>
                      </span>
                    </div>
                    <% if spot_data['name'].present? %>
                      <%= link_to "https://www.google.com/maps/search/?api=1&query=#{ERB::Util.url_encode(spot_data['name'])}", target: "_blank", rel: "noopener", class: "text-blue-500 hover:text-blue-700 text-xs flex items-center gap-1 font-bold" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                          <path fill-rule="evenodd" d="m9.69 18.933.003.001C9.89 19.02 10 19 10 19s.11.02.308-.066l.002-.001.006-.003.018-.008a5.741 5.741 0 0 0 .281-.14c.186-.096.446-.24.757-.433.62-.384 1.445-.966 2.274-1.765C15.302 14.988 17 12.493 17 9A7 7 0 1 0 3 9c0 3.492 1.698 5.988 3.355 7.584a13.731 13.731 0 0 0 2.273 1.765 11.842 11.842 0 0 0 .976.544l.062.029.018.008.006.003ZM10 11.25a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5Z" clip-rule="evenodd" />
                        </svg>
                        Map
                      <% end %>
                    <% end %>
                  </div>
                  
                  <%# 修正ポイント: Trip#user ではなく editable_by? メソッドでチェック %>
                  <% if message.trip.editable_by?(current_user) %>
                    <% unique_form_id = "add_spot_form_#{message.id}_#{i}" %>
                    <%= form_with url: trip_spots_path(message.trip), method: :post, id: unique_form_id, class: "mt-3 pt-3 border-t border-gray-100" do |f| %>
                      <%= f.hidden_field 'spot[name]', value: spot_data['name'] %>
                      <%= f.hidden_field 'spot[estimated_cost]', value: spot_data['estimated_cost'] %>
                      <%= f.hidden_field 'spot[duration]', value: spot_data['duration'] %>
                      <%= f.hidden_field 'spot[latitude]', value: spot_data['latitude'] %>
                      <%= f.hidden_field 'spot[longitude]', value: spot_data['longitude'] %>
                      <%= f.hidden_field 'spot[source]', value: 'chat' %>
                      
                      <%= hidden_field_tag :unique_form_id, unique_form_id %>
                      
                      <label class="flex items-center gap-2 mb-3 cursor-pointer">
                        <%= f.check_box 'spot[reservation_required]', class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                        <span class="text-xs text-gray-700 font-medium select-none">このスポットは予約が必要</span>
                      </label>
                      <div class="flex gap-2">
                        <%= f.select 'spot[day_number]', options_for_select(trip_days_options(message.trip)), {}, class: "flex-1 text-xs border-gray-300 rounded-lg focus:border-blue-500 focus:ring-blue-500 py-2 bg-gray-50" %>
                        <%= f.button type: "submit", class: "bg-blue-600 hover:bg-blue-700 text-white text-xs font-bold py-2 px-4 rounded-lg transition-colors flex items-center gap-1 flex-shrink-0 shadow-sm" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                            <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
                          </svg>
                          追加
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <%# B. 通常テキスト %>
          <div class="bg-white p-4 rounded-2xl rounded-tl-none border border-gray-100 text-sm md:text-base text-gray-800 leading-relaxed prose prose-sm prose-blue shadow-sm">
            <%= simple_format(message.response) %>
          </div>
        <% end %>

        <div class="flex items-center gap-2 mt-1 px-1">
          <span class="text-[10px] text-purple-600 font-bold">AI Concierge</span>
          <span class="text-[10px] text-gray-400"><%= message.created_at.in_time_zone('Tokyo').strftime("%H:%M") %></span>
        </div>

      </div>
    </div>
  <% end %>
<% end %>