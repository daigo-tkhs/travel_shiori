<%# app/views/messages/index.html.erb %>

<div class="bg-gray-100 min-h-screen flex flex-col">

  <%# --- 1. ヘッダー (共通デザイン・グラデーション) --- %>
  <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white shadow-md sticky top-0 z-50">
    <div class="px-4 py-4">
      <div class="flex items-start justify-between gap-3">
        <%# 戻るボタン: 旅程詳細画面へ %>
        <%= link_to trip_path(@trip), class: "p-2 hover:bg-white/20 rounded-full transition-colors flex-shrink-0" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
        <% end %>

        <%# タイトルエリア %>
        <div class="flex-1 pt-1">
          <h1 class="text-lg font-bold leading-tight mb-1"><%= @trip.title %></h1>
          <div class="flex items-center gap-2 text-blue-100 text-xs">
            <%# チャット画面であることを示すアイコンとテキスト %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
              <path d="M15.98 1.804a1 1 0 0 0-1.96 0l-.24 1.192a1 1 0 0 1-.784.785l-1.192.238a1 1 0 0 0 0 1.962l1.192.238a1 1 0 0 1 .785.785l.238 1.192a1 1 0 0 0 1.962 0l.238-1.192a1 1 0 0 1 .785-.785l1.192-.238a1 1 0 0 0 0-1.962l-1.192-.238a1 1 0 0 1-.785-.785l-.238-1.192ZM6.949 5.684a1 1 0 0 0-1.898 0l-.683 2.051a1 1 0 0 1-.95.69h-2.16a1 1 0 0 0-.95 1.31l1.75 2.545a1 1 0 0 1 .35 1.077l-.683 2.051a1 1 0 0 0 1.536 1.116l1.75-1.27a1 1 0 0 1 1.175 0l1.75 1.27a1 1 0 0 0 1.536-1.116l-.683-2.05c-.114-.34.002-.715.35-1.078l1.75-2.545a1 1 0 0 0-.95-1.31h-2.16a1 1 0 0 1-.95-.69l-.683-2.05Z" />
            </svg>
            <span>AIトラベルアシスタント</span>
          </div>
        </div>
        
        <%# 右側ボタン: なし %>
      </div>
    </div>
  </div>

  <%# --- 2. チャットエリア --- %>
  <div class="flex-1 p-4 space-y-6 pb-32 overflow-y-auto" id="messages-container" data-controller="scroll">
    
    <%# 初回メッセージ（固定） %>
    <div class="flex justify-start items-start gap-2">
      <%# --- 変更点: shadow-sm を削除 --- %>
      <%= image_tag "ai_concierge_icon.png", class: "w-8 h-8 rounded-full object-cover flex-shrink-0", alt: "AI Icon" %>
      
      <div class="bg-white p-3 rounded-2xl rounded-tl-none shadow-sm border border-gray-100 text-sm text-gray-800 max-w-[85%] leading-relaxed">
        こんにちは！旅行の計画でお困りですか？<br>
        「おすすめの観光地は？」「2日目のランチどこがいい？」など、なんでも聞いてください！
      </div>
    </div>

    <%# 履歴ループ %>
    <% @messages.each do |message| %>
      <%= turbo_frame_tag message do %>
        <%# ユーザーのメッセージ（右側） %>
        <div class="flex justify-end mb-2">
          <div class="flex flex-col items-end max-w-[80%]">
            <div class="bg-blue-600 text-white p-3 rounded-2xl rounded-tr-none shadow-md text-sm leading-relaxed">
              <%= simple_format(message.prompt, class: "mb-0") %>
            </div>
            <% if message.user_id == current_user.id %>
              <div class="flex gap-3 mt-1 mr-1 text-[10px] text-gray-400">
                <%= link_to "編集", edit_trip_message_path(@trip, message), class: "hover:text-blue-600 transition flex items-center gap-0.5" %>
                <%= link_to "削除", trip_message_path(@trip, message), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "hover:text-red-500 transition flex items-center gap-0.5" %>
              </div>
            <% end %>
          </div>
        </div>

        <%# AIの返答（左側） %>
        <% if message.response.present? %>
          <div class="flex justify-start items-start gap-2 mb-6">
            <%# --- 変更点: shadow-sm を削除 --- %>
            <%= image_tag "ai_concierge_icon.png", class: "w-8 h-8 rounded-full object-cover flex-shrink-0", alt: "AI Icon" %>
            
            <div class="max-w-[90%]">
              <% suggestion = parse_spot_suggestion(message.response) %>

              <% if suggestion %>
                <%# A. スポット提案 %>
                <div class="space-y-3">
                  <div class="bg-white p-3 rounded-2xl rounded-tl-none shadow-sm border border-gray-100 text-sm text-gray-800">
                    <%= suggestion['message'] %>
                  </div>
                  
                  <%# ▼▼▼ 修正: spots が存在する場合のみ表示する（nilチェック追加） ▼▼▼ %>
                  <% if suggestion['spots'].present? %>
                    <% suggestion['spots'].each do |spot_data| %>
                      <div class="bg-white p-3 rounded-xl border border-blue-100 shadow-md overflow-hidden">
                        <div class="flex justify-between items-start gap-2 mb-2">
                          <h3 class="font-bold text-gray-900 text-sm"><%= spot_data['name'] %></h3>
                          <span class="bg-blue-100 text-blue-700 text-[10px] px-2 py-0.5 rounded-full font-bold whitespace-nowrap">おすすめ</span>
                        </div>
                        <p class="text-xs text-gray-600 mb-3 leading-relaxed"><%= spot_data['description'] %></p>
                        <div class="flex items-center justify-between mb-3">
                          <div class="flex items-center gap-3 text-xs text-gray-500">
                            <span>⏱ <%= spot_data['duration'] %>分</span>
                            <span class="font-bold text-gray-700">¥ <%= number_with_delimiter(spot_data['estimated_cost']) %></span>
                          </div>
                          <% if spot_data['name'].present? %>
                            <%= link_to "https://www.google.com/maps/search/?api=1&query=#{ERB::Util.url_encode(spot_data['name'])}", target: "_blank", rel: "noopener", class: "text-blue-500 hover:text-blue-700 text-xs flex items-center gap-1" do %>
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                                <path fill-rule="evenodd" d="m9.69 18.933.003.001C9.89 19.02 10 19 10 19s.11.02.308-.066l.002-.001.006-.003.018-.008a5.741 5.741 0 0 0 .281-.14c.186-.096.446-.24.757-.433.62-.384 1.445-.966 2.274-1.765C15.302 14.988 17 12.493 17 9A7 7 0 1 0 3 9c0 3.492 1.698 5.988 3.355 7.584a13.731 13.731 0 0 0 2.273 1.765 11.842 11.842 0 0 0 .976.544l.062.029.018.008.006.003ZM10 11.25a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5Z" clip-rule="evenodd" />
                              </svg>
                              Map
                            <% end %>
                          <% end %>
                        </div>

                        <%= form_with url: trip_spots_path(@trip), method: :post, data: { turbo_frame: "_top" }, class: "mt-3 pt-2 border-t border-gray-100" do |f| %>
                          <%= f.hidden_field 'spot[name]', value: spot_data['name'] %>
                          <%= f.hidden_field 'spot[estimated_cost]', value: spot_data['estimated_cost'] %>
                          <%= f.hidden_field 'spot[duration]', value: spot_data['duration'] %>
                          
                          <label class="flex items-center gap-2 mb-2 cursor-pointer">
                            <%= f.check_box 'spot[reservation_required]', class: "w-3.5 h-3.5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                            <span class="text-xs text-gray-700 font-medium">このスポットは予約が必要</span>
                          </label>
                          
                          <div class="flex gap-2">
                            <%= f.select 'spot[day_number]', 
                                options_for_select(trip_days_options(@trip)), 
                                {}, 
                                class: "flex-1 text-xs border-gray-300 rounded-lg focus:border-blue-500 focus:ring-blue-500 py-1.5" %>
                            
                            <%= f.button type: "submit", class: "bg-blue-600 text-white text-xs font-bold py-1.5 px-3 rounded-lg hover:bg-blue-700 transition flex items-center gap-1 flex-shrink-0" do %>
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                                <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
                              </svg>
                              追加
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                  <%# ▲▲▲ nilチェックここまで ▲▲▲ %>
                  
                </div>

              <% else %>
                <%# B. 通常のテキスト %>
                <div class="bg-white p-4 rounded-2xl rounded-tl-none shadow-sm border border-gray-100 text-sm text-gray-800 leading-relaxed prose prose-sm prose-blue">
                  <%= simple_format(message.response) %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div id="scroll-anchor"></div>
  </div>

  <%# --- 3. 入力フォーム --- %>
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4 z-50 safe-area-pb">
    <div class="max-w-md md:max-w-4xl mx-auto">
      <%= form_with model: [@trip, @message], local: true, class: "relative" do |f| %>
        <div class="flex items-end gap-2 bg-gray-100 p-2 rounded-3xl border border-transparent focus-within:border-blue-500 focus-within:bg-white transition-colors">
          <%= f.text_area :prompt, placeholder: "メッセージを入力...", rows: 1, class: "w-full bg-transparent border-none focus:ring-0 resize-none max-h-32 py-2.5 px-3 text-sm", oninput: 'this.style.height = "";this.style.height = this.scrollHeight + "px"' %>
          <%= f.button type: "submit", class: "bg-blue-600 text-white p-2 rounded-full hover:bg-blue-700 transition shadow-sm mb-0.5 mr-0.5 flex-shrink-0" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
              <path d="M3.478 2.404a.75.75 0 0 0-.926.941l2.432 7.905H13.5a.75.75 0 0 1 0 1.5H4.984l-2.432 7.905a.75.75 0 0 0 .926.94 60.519 60.519 0 0 0 18.445-8.986.75.75 0 0 0 0-1.218A60.517 60.517 0 0 0 3.478 2.404Z" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>