<%# app/views/messages/edit.html.erb %>

<div class="min-h-screen bg-gray-50 flex flex-col">
  <%# ヘッダー %>
  <div class="bg-white border-b border-gray-200 px-4 py-3 shadow-sm">
    <h1 class="text-lg font-bold text-gray-800 text-center">メッセージを編集</h1>
  </div>

  <div class="flex-1 p-4 flex items-center justify-center">
    <div class="w-full max-w-md bg-white p-6 rounded-xl shadow-sm border border-gray-100">
      
      <%= form_with(model: [@trip, @message], local: true) do |f| %>
        <%= render 'shared/error_messages', resource: @message %>

        <div class="mb-4">
          <%= f.label :prompt, "メッセージ内容", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.text_area :prompt, rows: 5, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm leading-relaxed" %>
        </div>

        <div class="flex gap-3 pt-2">
          <%= link_to "キャンセル", trip_messages_path(@trip), class: "flex-1 bg-gray-100 text-gray-600 font-bold py-3 rounded-lg text-center text-sm hover:bg-gray-200 transition" %>
          <%= f.submit "更新する", class: "flex-1 bg-blue-600 text-white font-bold py-3 rounded-lg text-sm hover:bg-blue-700 transition shadow-sm cursor-pointer" %>
        </div>
      <% end %>

    </div>
  </div>
</div>