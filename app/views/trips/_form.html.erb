<%# フォーム全体 %>
<%= form_with(model: trip, local: true, class: "space-y-8") do |f| %>
  <%= render 'shared/error_messages', resource: trip %>

  <%# --- 1. タイトル --- %>
  <div class="space-y-2">
    <%= f.label :title, "旅程のタイトル", class: "block text-sm font-bold text-gray-700 ml-1" %>
    <%= f.text_field :title, placeholder: "例: 夏の北海道旅行", class: "w-full px-4 py-3.5 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all placeholder-gray-400" %>
  </div>

  <%# --- 2. 日付 --- %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-2">
      <%= f.label :start_date, "開始日", class: "block text-sm font-bold text-gray-700 ml-1" %>
      <%= f.date_field :start_date, class: "w-full px-4 py-3.5 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all cursor-pointer" %>
    </div>
    <div class="space-y-2">
      <%= f.label :end_date, "終了日", class: "block text-sm font-bold text-gray-700 ml-1" %>
      <%= f.date_field :end_date, class: "w-full px-4 py-3.5 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all cursor-pointer" %>
    </div>
  </div>

  <%# --- 3. 総予算 --- %>
  <div class="space-y-2">
    <%= f.label :total_budget, "総予算 (円)", class: "block text-sm font-bold text-gray-700 ml-1" %>
    
    <%# flexアイテムとして横に並べることで、¥マークを外に出します %>
    <div class="flex items-center gap-3">
      <%# 円マークを固定表示。背景色や枠線をあえて付けず、スッキリさせます %>
      <span class="text-xl font-bold text-gray-400">¥</span>
      
      <%# 入力フィールド本体 %>
      <div class="flex-1 relative rounded-xl shadow-sm">
        <%= f.number_field :total_budget, 
            placeholder: "50000", 
            class: "w-full px-4 py-3.5 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
      </div>
    </div>
  </div>

  <%# --- 4. テーマ --- %>
  <div class="space-y-2">
    <%= f.label :travel_theme, "旅行のテーマ", class: "block text-sm font-bold text-gray-700 ml-1" %>
    <%= f.select :travel_theme, Trip::THEMES, { prompt: "テーマを選択してください" }, class: "w-full px-4 py-3.5 border border-gray-300 rounded-xl bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all cursor-pointer" %>
  </div>

  <%# --- 5. 送信ボタン --- %>
  <div class="pt-4">
    <%= f.submit btn_text, class: "w-full py-4 px-6 rounded-full text-white font-bold bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 shadow-lg transform active:scale-95 transition-all cursor-pointer text-lg" %>
  </div>
<% end %>