<%# app/views/trips/show.html.erb %>
<% @hide_header = true %>

<div class="pb-24">
  
  <%# --- 1. 詳細画面専用ヘッダー --- %>
  <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-4">
      <div class="flex items-start justify-between gap-3">
        <%= link_to root_path, class: "p-2 hover:bg-white/20 rounded-full transition-colors flex-shrink-0" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
        <% end %>

        <div class="flex-1 pt-1">
          <h1 class="text-lg font-bold leading-tight mb-1"><%= @trip.title %></h1>
          <div class="flex items-center gap-2 text-blue-100 text-xs">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
              <path fill-rule="evenodd" d="M5.75 2a.75.75 0 0 1 .75.75V4h7V2.75a.75.75 0 0 1 1.5 0V4h.25A2.75 2.75 0 0 1 18 6.75v8.5A2.75 2.75 0 0 1 15.25 18H4.75A2.75 2.75 0 0 1 2 15.25v-8.5A2.75 2.75 0 0 1 4.75 4h.25V2.75A.75.75 0 0 1 5.75 2Zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75Z" clip-rule="evenodd" />
            </svg>
            <% if @trip.start_date %>
              <span><%= @trip.start_date.strftime("%Y/%m/%d") %></span>
              <% if @trip.end_date %>
                <span> - <%= @trip.end_date.strftime("%m/%d") %></span>
              <% end %>
            <% else %>
              <span>日付未定</span>
            <% end %>
          </div>
        </div>

        <div class="flex items-center gap-1 flex-shrink-0">
          <%# お気に入りボタン %>
          <% if @trip.favorited_by?(current_user) %>
            <%= button_to trip_favorite_path(@trip), method: :delete, class: "p-2 hover:bg-white/20 rounded-full transition-colors text-pink-300 hover:text-pink-400", form: { class: "inline-block" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                <path d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z" />
              </svg>
            <% end %>
          <% else %>
            <%= button_to trip_favorite_path(@trip), method: :post, class: "p-2 hover:bg-white/20 rounded-full transition-colors text-white hover:text-pink-200", form: { class: "inline-block" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
              </svg>
            <% end %>
          <% end %>

          <%# 共有 %>
          <%= link_to sharing_trip_path(@trip), class: "p-2 hover:bg-white/20 rounded-full transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 1 0 0 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186 9.566-5.314m-9.566 7.5 9.566 5.314m0 0a2.25 2.25 0 1 0 3.935 2.186 2.25 2.25 0 0 0-3.935-2.186Zm0-12.814a2.25 2.25 0 1 0 3.933-2.185 2.25 2.25 0 0 0-3.933 2.185Z" />
            </svg>
          <% end %>
          <%# リスト %>
          <%= link_to trip_checklists_path(@trip), class: "p-2 hover:bg-white/20 rounded-full transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
            </svg>
          <% end %>
          <%# 編集 %>
          <%= link_to edit_trip_path(@trip), class: "p-2 hover:bg-white/20 rounded-full transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# --- メインコンテンツ --- %>
  <div class="max-w-7xl mx-auto p-4 space-y-6">
    
    <%# 2. 旅程サマリーカード %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <h2 class="text-gray-900 mb-4 text-sm font-bold flex items-center gap-2 border-b border-gray-100 pb-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-blue-500">
          <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm.75-11.25a.75.75 0 0 0-1.5 0v2.5h-2.5a.75.75 0 0 0 0 1.5h2.5v2.5a.75.75 0 0 0 1.5 0v-2.5h2.5a.75.75 0 0 0 0-1.5h-2.5v-2.5Z" clip-rule="evenodd" />
        </svg>
        旅程サマリー
      </h2>
      <div class="grid grid-cols-2 gap-4 mb-4">
        <div class="bg-blue-50 rounded-lg p-3">
          <p class="text-[10px] text-gray-500 font-bold mb-1">総予算 (予定)</p>
          <div class="flex items-end gap-1">
            <span class="text-lg font-bold text-blue-700">¥<%= number_with_delimiter(@total_estimated_cost) %></span>
            <span class="text-[10px] text-gray-400 mb-1">/ ¥<%= number_with_delimiter(@trip.total_budget) %></span>
          </div>
          <% if @total_estimated_cost > @trip.total_budget %>
             <p class="text-[10px] text-red-500 font-bold mt-1">⚠️ 予算オーバー</p>
          <% end %>
        </div>
        <div class="bg-green-50 rounded-lg p-3">
          <p class="text-[10px] text-gray-500 font-bold mb-1">総所要時間</p>
          <p class="text-lg font-bold text-green-700"><%= format_duration(@grand_total_mins) %></p>
          <div class="flex gap-2 mt-1 text-[9px] text-gray-500">
            <span>滞在: <%= format_duration(@total_duration_mins) %></span>
            <span>移動: <%= format_duration(@total_travel_mins) %></span>
          </div>
        </div>
      </div>
      <div class="space-y-2">
        <p class="text-xs font-bold text-gray-400">日別内訳</p>
        <% @daily_stats.each do |day, stats| %>
          <div class="flex justify-between items-center text-xs border-b border-gray-50 pb-1 last:border-0">
            <div class="flex items-center gap-2">
              <span class="bg-gray-200 text-gray-600 px-1.5 rounded text-[10px] font-bold">DAY <%= day %></span>
              <span class="text-gray-600">¥<%= number_with_delimiter(stats[:cost]) %></span>
            </div>
            <div class="text-gray-500">
              <span class="mr-2">滞在 <%= format_duration(stats[:stay]) %></span>
              <span>移動 <%= format_duration(stats[:travel]) %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# 3. スケジュールリスト %>
    <div class="schedule-section space-y-6">
      <% if @trip.spots.present? %>
        <% @trip.spots.order(day_number: :asc, position: :asc).group_by(&:day_number).each do |day_num, spots| %>
          <div class="day-block">
            <div class="sticky top-[68px] z-20 -mx-4 px-4 py-2 bg-gray-100/95 backdrop-blur-sm border-y border-gray-200 flex justify-between items-center mb-4 lg:mx-0 lg:rounded-lg">
              <div class="flex items-center gap-2">
                <span class="bg-blue-600 text-white text-xs font-bold px-2 py-1 rounded">DAY <%= day_num %></span>
                <span class="text-sm font-bold text-gray-700">
                  <% if @trip.start_date %>
                    <% target_date = @trip.start_date + (day_num - 1).days %>
                    <%= target_date.strftime("%m月%d日") %> (<%= %w(日 月 火 水 木 金 土)[target_date.wday] %>)
                  <% else %>
                    日付未定
                  <% end %>
                </span>
              </div>
            </div>

            <div class="relative border-l-2 border-gray-200 ml-4 pl-6 space-y-6 pb-4 min-h-[100px]"
                 data-controller="sortable"
                 data-sortable-url-value="<%= move_trip_spot_path(@trip, ':id') %>"
                 data-day-number="<%= day_num %>">
              <% spots.each_with_index do |spot, index| %>
                <div class="relative group cursor-move" data-id="<%= spot.id %>">
                  <div class="absolute -left-[31px] top-0 w-4 h-4 rounded-full bg-white border-2 border-blue-500"></div>
                  <div class="bg-white rounded-xl p-3 border border-gray-100 shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex gap-3">
                      <div class="flex-shrink-0">
                        <div class="w-20 h-20 bg-gray-200 rounded-lg overflow-hidden relative">
                          <div class="absolute inset-0 flex items-center justify-center text-gray-400">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                            </svg>
                          </div>
                        </div>
                      </div>
                      <div class="flex-1 min-w-0 flex flex-col justify-between py-0.5">
                        <div>
                          <h3 class="text-gray-900 font-bold text-sm leading-tight mb-1 truncate"><%= spot.name %></h3>
                          <p class="text-xs text-gray-500 flex items-center gap-1">
                            <span class="inline-block w-1.5 h-1.5 rounded-full bg-green-400"></span>
                            観光スポット
                          </p>
                        </div>
                        <div class="flex items-center gap-3 text-xs font-medium text-gray-600 mt-2">
                          <div class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3.5 h-3.5 text-gray-400">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm.75-13a.75.75 0 0 0-1.5 0v5c0 .414.336.75.75.75h4a.75.75 0 0 0 0-1.5h-3.25V5Z" clip-rule="evenodd" />
                            </svg>
                            <span><%= spot.duration %>分</span>
                          </div>
                          <div class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3.5 h-3.5 text-gray-400">
                              <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
                            </svg>
                            <span>¥<%= number_with_delimiter(spot.estimated_cost) %></span>
                          </div>
                        </div>
                        <% if spot.booking_url.present? || spot.reservation_required? %>
                          <div class="mt-3">
                            <% if spot.booking_url.present? %>
                              <%= link_to spot.booking_url, target: "_blank", rel: "noopener", class: "inline-flex items-center gap-1 text-xs text-white bg-orange-500 hover:bg-orange-600 px-3 py-1.5 rounded-md transition shadow-sm" do %>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                                  <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z" clip-rule="evenodd" />
                                  <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z" clip-rule="evenodd" />
                                </svg>
                                予約・詳細
                              <% end %>
                            <% else %>
                              <div class="flex flex-col gap-2">
                                <div class="flex items-center gap-2 flex-wrap">
                                  <span class="text-[10px] text-gray-400 font-bold">国内:</span>
                                  <%= link_to "https://kw.travel.rakuten.co.jp/keyword/Search.do?charset=utf-8&f_query=#{ERB::Util.url_encode(spot.name)}", target: "_blank", rel: "noopener", class: "text-[10px] text-gray-600 bg-gray-100 hover:bg-red-50 hover:text-red-600 px-2 py-1 rounded border border-gray-200 transition" do %>
                                    楽天トラベル
                                  <% end %>
                                  <%= link_to "https://www.jalan.net/uw/uwp2011/uww2011search.do?keyword=#{CGI.escape(spot.name.encode('Shift_JIS', invalid: :replace, undef: :replace))}", target: "_blank", rel: "noopener", class: "text-[10px] text-gray-600 bg-gray-100 hover:bg-orange-50 hover:text-orange-600 px-2 py-1 rounded border border-gray-200 transition" do %>
                                    じゃらん
                                  <% end %>
                                </div>
                                <div class="flex items-center gap-2 flex-wrap">
                                  <span class="text-[10px] text-gray-400 font-bold">海外:</span>
                                  <%= link_to "https://www.booking.com/searchresults.html?ss=#{ERB::Util.url_encode(spot.name)}", target: "_blank", rel: "noopener", class: "text-[10px] text-gray-600 bg-gray-100 hover:bg-blue-50 hover:text-blue-600 px-2 py-1 rounded border border-gray-200 transition" do %>
                                    Booking
                                  <% end %>
                                  <%= link_to "https://www.expedia.co.jp/Hotel-Search?destination=#{ERB::Util.url_encode(spot.name)}", target: "_blank", rel: "noopener", class: "text-[10px] text-gray-600 bg-gray-100 hover:bg-yellow-50 hover:text-yellow-600 px-2 py-1 rounded border border-gray-200 transition" do %>
                                    Expedia
                                  <% end %>
                                </div>
                              </div>
                            <% end %>
                          </div>
                        <% end %>
                        <% if @trip.editable_by?(current_user) %>
                          <div class="mt-2 flex justify-end gap-2">
                            <%= link_to edit_trip_spot_path(@trip, spot), class: "text-xs text-gray-400 hover:text-blue-600 p-1" do %>
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                                <path d="m5.433 13.917 1.262-3.155A4 4 0 0 1 7.58 9.42l6.92-6.918a2.121 2.121 0 0 1 3 3L10.58 12.42a4 4 0 0 1-1.343.886l-3.155 1.262a.5.5 0 0 1-.65-.65Z" />
                                <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0 0 10 3H4.75A2.75 2.75 0 0 0 2 5.75v9.5A2.75 2.75 0 0 0 4.75 18h9.5A2.75 2.75 0 0 0 17 15.25V10a.75.75 0 0 0-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5Z" />
                              </svg>
                            <% end %>
                            <%= button_to trip_spot_path(@trip, spot), method: :delete, class: "text-xs text-gray-300 hover:text-red-500 p-1", form: { data: { turbo_confirm: "削除しますか？" } } do %>
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                                <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
                              </svg>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <% next_spot = spots[index + 1] %>
                    <% if next_spot && next_spot.travel_time.present? %>
                      <div class="flex items-center justify-center gap-2 text-xs text-gray-400 my-4">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                          <path d="M6.5 3c-1.051 0-2.093.04-3.125.117A1.49 1.49 0 0 0 2 4.607V10.5h9V4.606c0-.771-.59-1.43-1.375-1.489A41.568 41.568 0 0 0 6.5 3ZM2 12v2.5A1.5 1.5 0 0 0 3.5 16h.041a3 3 0 0 1 5.918 0h.791a.75.75 0 0 0 .75-.75V12H2Z" />
                          <path d="M6.5 18a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3ZM13.25 5a.75.75 0 0 0-.75.75v8.514a3.001 3.001 0 0 1 4.893 1.44c.37-.275.61-.719.595-1.231a20.381 20.381 0 0 0-.176-2.635L17.5 7.5c0-1.33-.96-2.5-2.406-2.5h-.844ZM15.5 18a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3Z" />
                        </svg>
                        <span>移動 <%= next_spot.travel_time %>分 (車)</span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @trip.editable_by?(current_user) %>
          <div class="mt-6 text-center">
            <%= link_to new_trip_spot_path(@trip), class: "inline-flex items-center gap-2 bg-white border-2 border-blue-500 text-blue-600 px-6 py-2 rounded-full font-bold text-sm hover:bg-blue-50 transition-colors shadow-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
              </svg>
              スポットを追加
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-10 border-2 border-dashed border-gray-200 rounded-lg bg-gray-50">
          <p class="text-gray-500 text-sm mb-4">まだスポットが登録されていません</p>
          <% if @trip.editable_by?(current_user) %>
            <%= link_to 'スポットを登録する', new_trip_spot_path(@trip), class: "text-blue-600 bg-blue-50 hover:bg-blue-100 px-4 py-2 rounded-full text-xs font-bold transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# --- Google Maps埋め込み --- %>
    <div class="mt-6"
          data-controller="map"
          data-map-api-key-value="<%= Rails.application.credentials.google_maps[:api_key] %>"
          data-map-markers-value="<%= @trip.spots.where.not(latitude: nil).map { |s| { lat: s.latitude, lng: s.longitude, title: s.name } }.to_json %>">
      
      <div class="mb-2 flex items-center gap-2">
