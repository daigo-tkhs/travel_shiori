<%# app/views/trips/sharing.html.erb %>

<div class="pb-24">
  <%# ヘッダー %>
  <div class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-50 px-4 py-3 flex items-center gap-3">
    <%= link_to trip_path(@trip), class: "p-2 -ml-2 hover:bg-gray-100 rounded-full transition-colors text-gray-600" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <h1 class="font-bold text-gray-800">共有設定</h1>
  </div>

  <div class="p-4 space-y-8">
    
    <%# --- 1. メンバー招待フォーム --- %>
    <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
      <h2 class="font-bold text-gray-900 mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-blue-600">
          <path d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
        </svg>
        メールで友達を招待
      </h2>

      <%= form_with url: invite_trip_path(@trip), method: :post, local: true, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :email, "招待する人のメールアドレス", class: "block text-xs font-bold text-gray-500 mb-1" %>
          <%= f.email_field :email, placeholder: "example@email.com", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm", required: true %>
        </div>

        <div>
          <%= f.label :role, "権限", class: "block text-xs font-bold text-gray-500 mb-1" %>
          <% if @trip.editable_by?(current_user) %>
            <%= f.select :role, [["編集者 (編集可能)", "editor"], ["閲覧者 (見るだけ)", "viewer"]], {}, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
          <% else %>
            <div class="w-full rounded-lg border border-gray-200 bg-gray-100 px-3 py-2 text-sm text-gray-600">
              閲覧者 (見るだけ)
            </div>
            <%= f.hidden_field :role, value: "viewer" %>
            <p class="text-xs text-gray-400 mt-1">※あなたは閲覧権限のため、閲覧者のみ招待できます。</p>
          <% end %>
        </div>

        <%= f.button type: "submit", class: "w-full bg-blue-600 text-white font-bold py-2.5 rounded-lg hover:bg-blue-700 transition shadow-sm flex items-center justify-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
            <path d="M3.105 2.289a.75.75 0 0 0-.826.95l1.414 4.925A1.5 1.5 0 0 0 5.135 9.25h6.115a.75.75 0 0 1 0 1.5H5.135a1.5 1.5 0 0 0-1.442 1.086l-1.414 4.926a.75.75 0 0 0 .826.95 28.896 28.896 0 0 0 15.293-7.154.75.75 0 0 0 0-1.115A28.897 28.897 0 0 0 3.105 2.289Z" />
          </svg>
          招待メールを送る
        <% end %>
      <% end %>
    </div>

    <%# --- 2. メンバー一覧 --- %>
    <div>
      <h3 class="font-bold text-gray-900 mb-3 text-sm">参加メンバー</h3>
      <div class="bg-white rounded-xl border border-gray-200 divide-y divide-gray-100 shadow-sm">
        
        <% @trip_users.each do |trip_user| %>
          <div class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-400 font-bold">
                <%= trip_user.user.nickname.first.upcase rescue "?" %>
              </div>
              <div>
                <p class="text-sm font-bold text-gray-900"><%= trip_user.user.nickname %></p>
                <p class="text-xs text-gray-500"><%= trip_user.user.email %></p>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <%# 権限バッジ %>
              <% case trip_user.permission_level %>
              <% when "owner" %>
                <span class="bg-yellow-100 text-yellow-800 text-[10px] font-bold px-2 py-1 rounded-full border border-yellow-200">所有者</span>
              <% when "editor" %>
                <span class="bg-blue-100 text-blue-800 text-[10px] font-bold px-2 py-1 rounded-full border border-blue-200">編集者</span>
              <% when "viewer" %>
                <span class="bg-gray-100 text-gray-600 text-[10px] font-bold px-2 py-1 rounded-full border border-gray-200">閲覧者</span>
              <% end %>

              <%# 削除ボタン（オーナーのみ表示、自分自身は削除不可） %>
              <% if @trip.owner?(current_user) && trip_user.user_id != current_user.id %>
                <%= button_to trip_trip_user_path(@trip, trip_user), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "text-gray-300 hover:text-red-500 transition" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                    <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>