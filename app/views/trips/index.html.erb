<%# app/views/trips/index.html.erb %>

<div class="pb-24 space-y-6">
  
  <div class="px-4 pt-6 pb-2">
    <h1 class="text-2xl font-bold text-gray-800">あなたの旅程</h1>
    <p class="text-sm text-gray-500 mt-1">次の旅行の計画を立てましょう</p>
  </div>

  <div class="px-4 space-y-4">
    <% if @trips.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @trips.each do |trip| %>
          <%= link_to trip_path(trip), class: "group block bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-all duration-200 active:scale-[0.98]" do %>
            
            <div class="flex flex-row sm:flex-col h-28 sm:h-auto">
              
              <div class="w-28 sm:w-full h-full sm:h-40 bg-gray-200 flex-shrink-0 flex items-center justify-center text-gray-400 relative overflow-hidden group-hover:opacity-90 transition">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 sm:w-12 sm:h-12">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                </svg>
              </div>

              <div class="flex-1 p-3 flex flex-col justify-between min-w-0 sm:gap-2">
                <div>
                  <div class="flex justify-between items-start gap-2 mb-1">
                    <h2 class="font-bold text-gray-900 truncate text-sm sm:text-base flex-1"><%= trip.title %></h2>
                    <span class="inline-block <%= theme_badge_class(trip.travel_theme) %> text-[10px] px-2 py-0.5 rounded-full font-bold whitespace-nowrap flex-shrink-0">
                      <%= trip.travel_theme %>
                    </span>
                  </div>

                  <div class="flex items-center gap-1 text-xs text-gray-500 mb-1">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                      <path fill-rule="evenodd" d="M5.75 2a.75.75 0 0 1 .75.75V4h7V2.75a.75.75 0 0 1 1.5 0V4h.25A2.75 2.75 0 0 1 18 6.75v8.5A2.75 2.75 0 0 1 15.25 18H4.75A2.75 2.75 0 0 1 2 15.25v-8.5A2.75 2.75 0 0 1 4.75 4h.25V2.75A.75.75 0 0 1 5.75 2Zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75Z" clip-rule="evenodd" />
                    </svg>
                    <% if trip.start_date %>
                      <span>
                        <%= trip.start_date.strftime("%Y/%m/%d") %>
                        <% if trip.end_date %>
                          - <%= trip.end_date.strftime("%m/%d") %>
                        <% end %>
                      </span>
                    <% else %>
                      日付未定
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center gap-1 text-xs text-gray-600 font-medium border-t border-gray-100 pt-2 mt-1 sm:mt-auto">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3.5 h-3.5 text-gray-400">
                    <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
                  </svg>
                  予算: ¥<%= number_with_delimiter(trip.total_budget) %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center py-16 px-6 bg-white rounded-xl border-2 border-dashed border-gray-200 mt-8">
        <div class="mb-4 inline-flex p-4 bg-blue-50 rounded-full text-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-1">旅程を作成しましょう</h3>
        <p class="text-sm text-gray-500 mb-6 text-center">AIと一緒に、あなただけの<br>旅行プランを作りませんか？</p>
        
        <div class="fixed bottom-24 left-0 w-full z-30 pointer-events-none">
          <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto relative px-4">
            <%= link_to "新しい旅程を作成", new_trip_path, class: "pointer-events-auto inline-block bg-blue-600 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-700 transition hover:scale-105" %>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <%# FAB: レスポンシブコンテナ内に配置 %>
  <% if @trips.any? %>
    <div class="fixed bottom-24 left-0 w-full z-30 pointer-events-none">
      <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto relative px-4">
        <%= link_to new_trip_path, class: "absolute right-8 bottom-0 pointer-events-auto group transition-all duration-200 hover:scale-110" do %>
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>