<div class="max-w-2xl mx-auto px-4 py-8 pb-24">
  <div class="mb-6 flex items-center gap-2">
    <%= link_to trip_path(@trip), class: "p-2 hover:bg-gray-100 rounded-full transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <h1 class="text-xl font-bold text-gray-900">スポットを追加</h1>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <%= render 'form', trip: @trip, spot: @spot, btn_text: "追加する" %>
  </div>
</div>