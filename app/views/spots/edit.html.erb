<%# app/views/spots/edit.html.erb %>
<div class="container">
  <h1 class="text-xl font-bold mb-4">スポットを編集</h1>
  
  <%# フォームは new と同じものを使い回せます %>
  <%= form_with model: [@trip, @spot], local: true do |f| %>
    <%= render 'shared/error_messages', resource: @spot %>

    <div class="field mb-4">
      <%= f.label :day_number, "何日目？", class: "block text-sm font-bold text-gray-700" %>
      <%= f.number_field :day_number, min: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="field mb-4">
      <%= f.label :name, "スポット名 (必須)", class: "block text-sm font-bold text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="field mb-4">
      <%= f.label :estimated_cost, "概算費用 (円)", class: "block text-sm font-bold text-gray-700" %>
      <%= f.number_field :estimated_cost, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="field mb-4">
      <%= f.label :duration, "滞在/移動時間 (分)", class: "block text-sm font-bold text-gray-700" %>
      <%= f.number_field :duration, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
    
    <div class="field mb-6">
      <%= f.label :booking_url, "予約/参考URL", class: "block text-sm font-bold text-gray-700" %>
      <%= f.url_field :booking_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="flex gap-3">
      <%= link_to "キャンセル", trip_path(@trip), class: "flex-1 bg-gray-200 text-gray-700 py-2 px-4 rounded text-center hover:bg-gray-300 transition" %>
      <%= f.submit "更新する", class: "flex-1 bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition cursor-pointer" %>
    </div>
  <% end %>
</div>