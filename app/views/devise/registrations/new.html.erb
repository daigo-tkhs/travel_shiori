<% @hide_header = true %>
<% @hide_footer = true %>

<div class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-purple-600 via-blue-600 to-blue-500 font-sans p-6">
  <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl overflow-hidden">
    <div class="px-8 py-10 md:px-10 md:py-12">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-extrabold text-gray-800">新規登録</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "shared/error_messages", resource: resource %>
        <div class="space-y-5">
          <div>
            <%= f.label :nickname, "ニックネーム", class: "block text-sm font-bold text-gray-600 mb-2" %>
            <%= f.text_field :nickname, autofocus: true, placeholder: "タビ好き", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
          </div>
          <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-gray-600 mb-2" %>
            <%= f.email_field :email, placeholder: "example@email.com", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
          </div>
          <div>
            <%= f.label :password, "パスワード", class: "block text-sm font-bold text-gray-600 mb-2" %>
            <% if @minimum_password_length %><span class="text-xs text-gray-400">（<%= @minimum_password_length %>文字以上）</span><% end %>
            <%= f.password_field :password, class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
          </div>
          <div>
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-bold text-gray-600 mb-2" %>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
          </div>
        </div>
        <div class="pt-6">
          <%= f.submit "アカウント作成", class: "w-full py-4 px-6 rounded-full text-white font-bold bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 shadow-lg transform active:scale-95 transition-all cursor-pointer text-lg" %>
        </div>
      <% end %>
      <div class="mt-8 text-center">
        <%= link_to "ログインはこちら", new_user_session_path, class: "text-sm font-bold text-purple-600 hover:text-purple-800" %>
      </div>
    </div>
  </div>
</div>