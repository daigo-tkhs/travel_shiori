<div class="min-h-screen w-full bg-gray-50 font-sans pt-12 pb-32 px-4">
  <div class="max-w-xl mx-auto">
    <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
      <div class="px-8 py-10 md:px-12 md:py-12">
        <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">アカウント編集</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div>
            <%= f.label :nickname, "ニックネーム", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.text_field :nickname, autofocus: true, class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
          </div>

          <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
          </div>

          <div class="pt-4 border-t border-gray-100">
            <label class="block text-sm font-bold text-gray-700 mb-2">新しいパスワード <span class="text-xs font-normal text-gray-400">（変更する場合のみ）</span></label>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-purple-500 transition-all mb-4" %>
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-purple-500 transition-all" %>
          </div>

          <div class="pt-4 border-t border-gray-100">
            <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-bold text-gray-700 mb-1" %>
            <p class="text-xs text-gray-400 mb-2">※変更を保存するには入力が必要です</p>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-purple-500 transition-all" %>
          </div>

          <div class="pt-6">
            <%= f.submit "更新する", class: "w-full py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold rounded-full shadow-lg hover:from-purple-700 hover:to-blue-700 transform active:scale-95 transition-all cursor-pointer" %>
          </div>
        <% end %>

        <div class="mt-12 pt-8 border-t border-red-100">
          <h3 class="text-sm font-bold text-red-600 mb-4">アカウントの削除</h3>
          <%= button_to "アカウントを削除する", registration_path(resource_name), data: { turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "w-full bg-red-50 text-red-600 border border-red-100 py-3 rounded-xl hover:bg-red-100 transition font-bold text-sm cursor-pointer" %>
        </div>
      </div>
    </div>
  </div>
</div>