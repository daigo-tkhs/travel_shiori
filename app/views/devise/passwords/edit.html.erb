<%# app/views/devise/passwords/edit.html.erb %>

<div class="min-h-screen flex items-center justify-center px-4 py-12">
  <div class="max-w-sm w-full bg-white p-8 rounded-xl shadow-lg border border-gray-100">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">パスワードの変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "新しいパスワード", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-400 font-normal">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="pt-2">
        <%= f.submit "パスワードを変更する", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer transition" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>