<% @hide_header = true %>
<% @hide_footer = true %>

<div class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-purple-600 via-blue-600 to-blue-500 font-sans p-6">
  <%# --- カード（外枠）: max-w-md に絞ってシュッとさせます --- %>
  <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl overflow-hidden">
    <div class="px-8 py-10 md:px-10 md:py-12">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-extrabold text-gray-800">ログイン</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-8" }) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-gray-600 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all placeholder-gray-400" %>
          </div>
          <div>
            <%= f.label :password, "パスワード", class: "block text-sm font-bold text-gray-600 mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all placeholder-gray-400" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-5 w-5 text-purple-600 focus:ring-purple-500 border-gray-300 rounded cursor-pointer" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "ml-3 block text-sm text-gray-500 cursor-pointer" %>
          </div>
        <% end %>

        <div class="pt-4">
          <%= f.submit "ログイン", class: "w-full py-4 px-6 rounded-full text-white font-bold bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 shadow-lg transform active:scale-95 transition-all cursor-pointer text-lg" %>
        </div>
      <% end %>

      <div class="mt-10 text-center space-y-4">
        <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-sm font-bold text-purple-600 hover:text-purple-800 transition-colors" %>
        <div class="block">
          <%= link_to "トップへ戻る", root_path, class: "text-xs text-gray-400 hover:text-gray-600 transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>