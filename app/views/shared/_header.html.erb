<header class="w-full bg-gradient-to-r from-purple-600 to-blue-500 shadow-lg sticky top-0 z-50">
  <div class="w-full px-6 md:px-10">
    <div class="flex justify-between h-16">
      
      <%# 左側: ロゴ画像とアプリ名 (左端に配置) %>
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path, class: "flex items-center gap-3 group no-underline" do %>
          <div class="flex items-center justify-center group-hover:scale-105 transition-transform duration-300">
            <%= image_tag "logo.png", class: "h-10 w-auto object-contain", alt: "TripConcierge Logo" %>
          </div>
          <span class="text-xl md:text-2xl font-black text-white tracking-tighter transition-opacity group-hover:opacity-90">
            TripConcierge
          </span>
        <% end %>
      </div>

      <%# 右側メニュー (右端に配置) %>
      <div class="flex items-center space-x-6">
        <% if user_signed_in? %>
          <span class="hidden md:block text-white/80 text-sm font-medium">
            <%= current_user.nickname %> さん
          </span>
          <%= button_to destroy_user_session_path, method: :delete, class: "cursor-pointer px-5 py-2 text-sm font-bold rounded-full text-purple-600 bg-white hover:bg-gray-50 shadow-md transition-all active:scale-95" do %>
            ログアウト
          <% end %>
        <% else %>
          <div class="flex items-center space-x-6">
            <%= link_to "ログイン", new_user_session_path, class: "text-white hover:text-white/80 font-bold text-sm transition" %>
            <%= link_to "新規登録", new_user_registration_path, class: "px-6 py-2 border-2 border-white rounded-full text-sm font-bold text-white hover:bg-white hover:text-purple-600 transition-all active:scale-95" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</header>