<%# app/views/checklists/index.html.erb %>

<div class="pb-24">
  <%# --- ヘッダー (共通デザイン) --- %>
  <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white shadow-md sticky top-0 z-50">
    <div class="px-4 py-4 flex items-center gap-3">
      <%= link_to trip_path(@trip), class: "p-2 -ml-2 hover:bg-white/20 rounded-full transition-colors flex-shrink-0" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
      <% end %>
      <div>
        <p class="text-xs text-blue-100 mb-0.5">持ち物リスト</p>
        <h1 class="text-lg font-bold leading-tight"><%= @trip.title %></h1>
      </div>
    </div>
  </div>

  <div class="p-4 space-y-6">
    
    <%# --- 自動生成 / 空の状態 --- %>
    <% if @checklist_items.empty? %>
      <div class="bg-white rounded-xl border-2 border-dashed border-gray-200 p-8 text-center">
        <div class="mb-4 inline-flex p-3 bg-blue-50 rounded-full text-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
          </svg>
        </div>
        <p class="text-gray-500 text-sm mb-4 font-medium">まだアイテムがありません。<br>定番セットを一括登録しますか？</p>
        <%= button_to import_trip_checklists_path(@trip), method: :post, class: "bg-blue-600 text-white font-bold py-2.5 px-6 rounded-full text-sm hover:bg-blue-700 transition shadow-md" do %>
           ✨ 自動生成する
        <% end %>
      </div>
    <% else %>
       <%# アイテムがある場合は「定番セットを追加」ボタンを表示しない %>
    <% end %>

    <%# --- リスト一覧 --- %>
    <div class="space-y-3">
      <% @checklist_items.each do |item| %>
        <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-3 flex items-center justify-between gap-3 transition-all duration-200 <%= 'opacity-60 bg-gray-50' if item.is_checked %>">
            
            <%# 更新フォーム (チェックボックス & 名前) %>
            <%= form_with model: [@trip, item], url: trip_checklist_path(@trip, item), local: true, class: "flex-1 flex items-center gap-3" do |f| %>
               <div class="relative flex items-center">
                 <%# チェックボックス: 変更されたら自動で送信(保存)するJavaScript付き %>
                 <%= f.check_box :is_checked, onchange: "this.form.requestSubmit()", class: "w-5 h-5 text-blue-600 rounded focus:ring-blue-500 border-gray-300 cursor-pointer" %>
               </div>
               <%# テキストボックス: フォーカスが外れたら保存 %>
               <%= f.text_field :name, class: "w-full border-none p-0 focus:ring-0 text-sm #{'line-through text-gray-400' if item.is_checked} bg-transparent placeholder-gray-300", onblur: "this.form.requestSubmit()" %>
            <% end %>

            <%# 削除ボタン %>
            <%= button_to trip_checklist_path(@trip, item), method: :delete, class: "text-gray-300 hover:text-red-500 p-2 rounded-full hover:bg-red-50 transition" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                 <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
               </svg>
            <% end %>
        </div>
      <% end %>
    </div>

    <%# --- 新規追加フォーム --- %>
    <div class="bg-gray-50 rounded-xl p-4 border border-gray-200 sticky bottom-4 shadow-lg">
       <h3 class="text-xs font-bold text-gray-500 mb-2">アイテムを追加</h3>
       <%= form_with model: [@trip, @checklist_item], url: trip_checklists_path(@trip), local: true, class: "flex gap-2" do |f| %>
          <%= f.text_field :name, placeholder: "例: 日焼け止め", class: "flex-1 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
          <%= f.button type: "submit", class: "bg-blue-600 text-white p-2.5 rounded-lg hover:bg-blue-700 transition shadow-sm flex-shrink-0" do %>
             <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
               <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
             </svg>
          <% end %>
       <% end %>
    </div>
  </div>
</div>